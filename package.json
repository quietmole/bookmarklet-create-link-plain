{
  "name": "browser-selected-text-or-title",
  "description": "Get selected text or current page title.",
  "version": "3.0.0",
  "author": {
    "name": "sanemat",
    "email": "o.gata.ken@gmail.com",
    "url": "sane.jp"
  },
  "dependencies": {},
  "devDependencies": {
    "browserify": "^11.2.0",
    "conventional-changelog": "^0.5.0",
    "derequire": "^2.0.2",
    "eclint": "^1.1.5",
    "eslint": "^1.7.1",
    "espower-loader": "^1.0.0",
    "espowerify": "^1.0.0",
    "fixpack": "^2.2.0",
    "globstar": "^1.0.0",
    "mocha": "^2.3.3",
    "npm-check-updates": "^2.3.2",
    "object-assign": "^4.0.1",
    "power-assert": "^1.1.0",
    "rimraf": "^2.4.3",
    "testem": "^0.9.8",
    "touch": "^1.0.0"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "files": [
    "index.js",
    "build/browser-selected-text-or-title.js"
  ],
  "keywords": [
    "bookmarklet",
    "browser",
    "link",
    "selection",
    "title"
  ],
  "license": "MIT",
  "repository": "quietmole/browser-selected-text-or-title",
  "scripts": {
    "build:browser": "npm prune && npm dedupe && browserify --standalone browserSelectedTextOrTitle ./index.js | derequire > build/browser-selected-text-or-title.js",
    "build:test-bundled": "browserify -t espowerify test.js > test-bundled.js",
    "changelog": "touch changelog.md && conventional-changelog -i changelog.md --overwrite --preset angular",
    "clear:test-bundled": "rimraf ./test-bundled.js",
    "eclint": "globstar --ignore \"{node_modules/**,test-bundled.js}\" -- eclint check \"*.{js,yml,md,json}\"",
    "eslint": "eslint --ignore-path .gitignore index.js test.js testem.js",
    "fixpack": "fixpack",
    "git:tag": "git tag v${npm_package_version}",
    "lint": "npm run eclint && npm run eslint",
    "ncu": "ncu -u",
    "test": "testem",
    "verify": "npm run lint && npm run test",
    "verify:appveyor": "npm run lint && npm run test -- --file testem.appveyor.js ci",
    "verify:travis": "npm run lint && npm run test -- --file testem.travis.js ci"
  }
}
